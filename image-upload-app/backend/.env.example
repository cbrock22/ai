# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
# For local installation (without Docker):
# MONGODB_URI=mongodb://localhost:27017/image-upload-app

# For Docker (docker-compose):
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/image-upload-app?authSource=admin

# For local connection to Docker MongoDB:
# MONGODB_URI=mongodb://admin:admin123@localhost:27017/image-upload-app?authSource=admin

# JWT Secret (IMPORTANT: Change this to a random secure string in production!)
# Generate one with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here-generate-with-openssl-rand-hex-32

# S3 Configuration (Optional - leave USE_S3=false to use local storage)
USE_S3=false
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
S3_BUCKET_NAME=your-bucket-name

# Localtunnel Configuration (Optional - for external access during development)
ENABLE_TUNNEL=false

# Default Admin User (Created automatically on first startup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=ChangeThisPassword123!
