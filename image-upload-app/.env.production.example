# Production Environment Configuration
# Copy this to .env and fill in your values

# MongoDB Credentials (CHANGE THESE!)
MONGO_USERNAME=admin
MONGO_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# JWT Secret (Generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here-generate-with-openssl-rand-hex-32

# Frontend URL (your domain or IP)
FRONTEND_URL=http://your-domain.com
# Or with IP: http://YOUR_SERVER_IP

# S3 Cloud Storage Configuration
# See S3_SETUP.md for complete setup instructions
# Leave USE_S3=false to use local Docker volume storage instead

USE_S3=false
# Change to true after setting up S3 bucket

# AWS Configuration (required if USE_S3=true)
AWS_REGION=us-east-1
# Options: us-east-1, us-west-2, eu-west-1, etc.

AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
# Get from AWS IAM > Users > Security credentials
# Example: AKIAIOSFODNN7EXAMPLE

AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
# Get from AWS IAM > Users > Security credentials
# Example: wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

S3_BUCKET_NAME=your-bucket-name
# Your S3 bucket name (must match exactly)
# Example: my-image-upload-app

# Default Admin User (Created automatically on first startup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=ChangeThisPassword123!
